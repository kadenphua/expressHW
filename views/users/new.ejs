<h1>NEW USER FORM</h1>

<form method="post" action="/users">
  <div class="form-group">
    <label for="name">Username</label>
    <input type="text" class="form-control" id="name" name="newusers[name]" placeholder="Put your username">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" id="password" name="newusers[password]" placeholder="Key in your password">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>

